<?xml version="1.0" encoding="UTF-8"?>
<fields>
	<field type="text">
		<editor><![CDATA[<div class="kaleflower-field-text-editor">
				<div class="kaleflower-field-text-editor__inner">
					<textarea name="text">{{ text }}</textarea>
				</div>
			</div>]]></editor>
		<script function="onload">
			function(dom, fieldHelper){
				console.log('text field: onload:', dom);
				return;
			}
		</script>
	</field>
	<field type="image">
		<editor><![CDATA[<div class="kaleflower-field-image-editor">
				<input type="hidden" name="resourceId" value="{{ resourceId }}" />
			</div>]]></editor>
		<script function="onload">
			function(dom, fieldHelper){
				const $ = fieldHelper.$;
				const $dom = $(dom);
				console.log('image field: onload:', $dom, fieldHelper);
				return;
			}
		</script>
		<script function="onsave">
		</script>
	</field>
</fields>
